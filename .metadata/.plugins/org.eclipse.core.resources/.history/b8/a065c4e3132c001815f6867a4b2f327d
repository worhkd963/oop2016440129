
public class Loop {

	public static void main(String[] args) {
		//1~10 정수를 화면에 출력
		int i;//i는 루프변수
		i = 1;//1.루프변수 초기화
		while(i<=10) { //2. 루프 조건식
			System.out.println(i);// 3. 루프문
			i++; // 4. 루프변수 변화
		}
		
		int sum=0;
		i=1;// 1. 루프변수 초기화
		while(i<=10)// 2. 루프 조건식
		{
			sum+=i; // 3.루프 문
			i++; // 4. 루프변수 변화
		}
		System.out.println(sum);
		for(i=1; i<=10; i++)
			sum+=i;
		System.out.println(sum);
		System.out.println("=============프로그램 종료=============");
	}

}
